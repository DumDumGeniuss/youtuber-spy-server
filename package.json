{
  "name": "create-node-express-mocha",
  "version": "1.0.0",
  "description": "NodeJs Express Mocha Quick Starter Kit",
  "main": "./src/app.js",
  "repository": "https://github.com/DumDumGeniuss/create-node-express-mocha.git",
  "author": "DumDumGeniuss",
  "license": "MIT",
  "scripts": {
    "test": "mocha --recursive",
    "dev": "./node_modules/.bin/nodemon",
    "start": "node ./src/app.js",
    "eslint": "./node_modules/.bin/eslint src test"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "chalk": "^1.1.3",
    "cheerio": "^1.0.0-rc.1",
    "dotenv": "^4.0.0",
    "es6-promise": "^4.1.0",
    "express": "^4.15.2",
    "express-validator": "^3.2.0",
    "isomorphic-fetch": "^2.2.1",
    "mongoose": "^4.9.6"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "nodemon": "^1.11.0",
    "sinon": "^2.1.0",
    "sinon-mongoose": "^2.0.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-console": 0,
      "func-names": 0,
      "no-underscore-dangle": 0
    },
    "globals": {
      "describe": false,
      "beforeEach": false,
      "afterEach": false,
      "it": false
    }
  }
}
